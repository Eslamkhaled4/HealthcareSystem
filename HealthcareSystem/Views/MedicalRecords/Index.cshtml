@model IEnumerable<HealthcareSystem.Models.MedicalRecord>

@{
    ViewData["Title"] = "Medical Records Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet"> <!-- Optional for icons -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: #4CAF50;
        }

        .container {
            width: 90%;
            margin: 0 auto;
        }

        .table-wrapper {
            overflow-x: auto; /* Enable horizontal scrolling */
            display: block; /* Ensure the table doesn't shrink on smaller screens */
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            table th, table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
                white-space: nowrap; /* Prevent content from wrapping */
            }

            table th {
                background-color: #f2f2f2;
                color: #4CAF50;
            }

            table tbody tr:hover {
                background-color: #f1f1f1;
            }

        a {
            text-decoration: none;
            font-weight: bold;
        }

        /* Action links styles */
        .edit-link {
            color: #28a745; /* Green for Edit */
        }

        .details-link {
            color: #6c757d; /* Gray for Details */
        }

        .delete-link {
            color: #dc3545; /* Red for Delete */
        }

        .action-links a {
            margin-right: 10px;
        }

        /* Button style */
        .create-btn {
            display: inline-block;
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            margin-bottom: 20px;
        }

            .create-btn:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Medical Records Management</h1>

        <p>
            <a href="@Url.Action("Create", "MedicalRecords")" class="create-btn">Create New Record</a>
        </p>

        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Diagnosis)</th>
                        <th>@Html.DisplayNameFor(model => model.Treatment)</th>
                        <th>@Html.DisplayNameFor(model => model.RecordDate)</th>
                        <th>Patient ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Diagnosis)</td>
                            <td>@Html.DisplayFor(modelItem => item.Treatment)</td>
                            <td>@Html.DisplayFor(modelItem => item.RecordDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Patient.PatientId)</td>
                            <td class="action-links">
                                <a class="edit-link" asp-action="Edit" asp-route-id="@item.RecordId"><i class="fas fa-edit"></i> Edit</a> |
                                <a class="details-link" asp-action="Details" asp-route-id="@item.RecordId"><i class="fas fa-info-circle"></i> Details</a> |
                                <a class="delete-link" asp-action="Delete" asp-route-id="@item.RecordId"><i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
