@model HealthcareSystem.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet"> <!-- Font Awesome -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1, h4 {
            text-align: center;
            color: #4CAF50;
        }

        .container {
            width: 80%;
            margin: 0 auto;
        }

        .details-container {
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 8px;
        }

            .details-container dl {
                margin-bottom: 20px;
            }

            .details-container dt {
                font-weight: bold;
                color: #333;
            }

            .details-container dd {
                margin-left: 10px;
                color: #666;
            }

        .action-links {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            text-decoration: none;
            border: none;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #45a049;
            }

        .btn-back {
            text-decoration: none;
            color: #4CAF50;
            font-weight: bold;
        }

            .btn-back:hover {
                color: #45a049;
            }

        .action-links a {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Appointment Details</h1>

        <div class="details-container">
            <h4>Appointment</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AppointmentDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AppointmentDate)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DoctorName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorName)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reason)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reason)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Patient)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Patient.PatientId)
                </dd>
            </dl>
        </div>

        <div class="action-links">
            <a href="@Url.Action("Edit", "Appointments", new { id = Model.AppointmentId })" class="btn">
                <i class="fas fa-edit"></i> Edit
            </a> |
            <a href="@Url.Action("Index", "Appointments")" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</body>
</html>
