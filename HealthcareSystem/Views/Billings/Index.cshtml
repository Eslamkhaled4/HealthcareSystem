@model IEnumerable<Billing>

@{
    ViewData["Title"] = "Billing Index";
}

<div class="container my-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Create New Billing
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Amount</th>
                    <th>Bill Date</th>
                    <th>Status</th>
                    <th>Patient</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                        <td>@Html.DisplayFor(modelItem => item.BillDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Patient.PatientId)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.BillId" class="btn btn-sm btn-outline-primary me-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.BillId" class="btn btn-sm btn-outline-info me-2">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.BillId" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
