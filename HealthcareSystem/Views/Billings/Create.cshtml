@model Billing

@{
    ViewData["Title"] = "Create Billing";
}

<div class="container my-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="card-title mb-4 text-center">Billing Details</h4>
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label">Patient</label>
                            <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Amount</label>
                            <input asp-for="Amount" class="form-control" placeholder="Enter amount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BillDate" class="form-label">Bill Date</label>
                            <input asp-for="BillDate" type="date" class="form-control" />
                            <span asp-validation-for="BillDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <input asp-for="Status" class="form-control" placeholder="Enter billing status" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Create Billing
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
