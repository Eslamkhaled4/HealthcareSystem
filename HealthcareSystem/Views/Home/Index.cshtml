@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section with Image Slider -->
<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- First Carousel Item -->
        <div class="carousel-item active">
            <img src="img/slider.jpg" class="d-block w-100" alt="Healthcare">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="display-4 fw-bold text-dark">Quality Healthcare at Your Fingertips</h3>
                <p class="lead text-dark">Providing exceptional patient care and seamless services with cutting-edge technology.</p>
            </div>
        </div>

        <!-- Second Carousel Item -->
        <div class="carousel-item">
            <img src="img/slider2.jpg" class="d-block w-100" alt="Patient Care">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="display-4 fw-bold text-dark">Personalized Patient Care</h3>
                <p class="lead text-dark">Ensuring your health and well-being with tailored healthcare solutions.</p>
            </div>
        </div>

        <!-- Third Carousel Item -->
        <div class="carousel-item">
            <img src="img/slider3.jpg" class="d-block w-100" alt="Appointments">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="display-4 fw-bold text-dark">Easy Appointment Scheduling</h3>
                <p class="lead text-dark">Book your appointments in just a few clicks and manage your healthcare effortlessly.</p>
            </div>
        </div>
    </div>

    <!-- Carousel Controls -->
    <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>

<div class="container mt-5">
    <!-- Row 1: Patients & Appointments -->
    <div class="row row-cols-1 row-cols-md-2 g-4">
        <!-- Manage Patients Section -->
        <div class="col">
            <div class="section bg-light py-4 shadow rounded h-100">
                <h2 class="text-center mb-4 fs-3">Manage Patients</h2>
                <div class="row align-items-center justify-content-center p-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <img src="img/pf2.jpg" alt="Patients" class="img-fluid rounded shadow-lg">
                    </div>
                    <div class="col-md-6">
                        <h3 class="fw-bold mb-3 fs-4">Patient Management</h3>
                        <p class="lead mb-4 text-muted fs-6">Easily maintain and organize patient records, from demographics to medical history. Track vital information for seamless healthcare.</p>
                        <a href="/Patients" class="btn btn-primary btn-lg px-4 py-2">
                            <i class="fas fa-users me-2"></i> Explore Patients
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appointments Section -->
        <div class="col">
            <div class="section bg-light py-4 shadow rounded h-100">
                <h2 class="text-center mb-4 fs-3">Appointments</h2>
                <div class="row align-items-center p-4">
                    <div class="col-md-6 order-md-2 mb-3 mb-md-0">
                        <img src="img/pf3.jpg" alt="Appointments" class="img-fluid rounded shadow">
                    </div>
                    <div class="col-md-6 order-md-1">
                        <h3 class="fw-bold mb-3 fs-4">Schedule Appointments</h3>
                        <p class="lead mb-4 text-muted fs-6">Organize, view, and manage appointments effectively, ensuring no overlap or confusion. Keep your day running smoothly.</p>
                        <a href="/Appointments" class="btn btn-secondary btn-lg px-4 py-2">
                            <i class="fas fa-calendar-check me-2"></i> View Appointments
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 2: Billing & Staff -->
    <div class="row row-cols-1 row-cols-md-2 g-4 mt-4">
        <!-- Billing Section -->
        <div class="col">
            <div class="section bg-light py-4 shadow rounded h-100">
                <h2 class="text-center mb-4 fs-3">Billing</h2>
                <div class="row align-items-center p-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <img src="img/pf4.jpg" alt="Billing" class="img-fluid rounded shadow">
                    </div>
                    <div class="col-md-6">
                        <h3 class="fw-bold mb-3 fs-4">Streamline Billing</h3>
                        <p class="lead mb-4 text-muted fs-6">Create and track invoices with ease. Enhance financial transparency and accuracy for both patients and administrators.</p>
                        <a href="/Billings" class="btn btn-success btn-lg px-4 py-2">
                            <i class="fas fa-file-invoice-dollar me-2"></i> Billing Details
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Staff Section -->
        <div class="col">
            <div class="section bg-light py-4 shadow rounded h-100">
                <h2 class="text-center mb-4 fs-3">Staff</h2>
                <div class="row align-items-center p-4">
                    <div class="col-md-6 order-md-2 mb-3 mb-md-0">
                        <img src="img/pf1.jpg" alt="Staff" class="img-fluid rounded shadow">
                    </div>
                    <div class="col-md-6 order-md-1">
                        <h3 class="fw-bold mb-3 fs-4">Meet Our Staff</h3>
                        <p class="lead mb-4 text-muted fs-6">Keep track of your healthcare team's profiles, roles, and schedules. Ensure smooth collaboration and communication.</p>
                        <a href="/Staffs" class="btn btn-info btn-lg px-4 py-2">
                            <i class="fas fa-user-md me-2"></i> View Staff
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 3: Pharmacy & Medical Records -->
    <div class="row row-cols-1 row-cols-md-2 g-4 mt-4">
        <!-- Pharmacy Section -->
        <div class="col">
            <div class="section bg-light py-4 shadow rounded h-100">
                <h2 class="text-center mb-4 fs-3">Pharmacy</h2>
                <div class="row align-items-center p-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <img src="img/pf5.jpg" alt="Pharmacy" class="img-fluid rounded shadow">
                    </div>
                    <div class="col-md-6">
                        <h3 class="fw-bold mb-3 fs-4">Pharmacy Management</h3>
                        <p class="lead mb-4 text-muted fs-6">Manage medication inventory, prescriptions, and patient requests in one centralized system. Stay organized effortlessly.</p>
                        <a href="/Pharmacies" class="btn btn-warning btn-lg px-4 py-2">
                            <i class="fas fa-pills me-2"></i> Explore Pharmacy
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Medical Records Section -->
        <div class="col">
            <div class="section bg-light py-4 shadow rounded h-100">
                <h2 class="text-center mb-4 fs-3">Medical Records</h2>
                <div class="row align-items-center p-4">
                    <div class="col-md-6 order-md-2 mb-3 mb-md-0">
                        <img src="img/pf6.jpg" alt="Medical Records" class="img-fluid rounded shadow">
                    </div>
                    <div class="col-md-6 order-md-1">
                        <h3 class="fw-bold mb-3 fs-4">Access Medical Records</h3>
                        <p class="lead mb-4 text-muted fs-6">Digitally manage and securely access medical records for faster decision-making and improved patient care.</p>
                        <a href="/MedicalRecords" class="btn btn-dark btn-lg px-4 py-2">
                            <i class="fas fa-file-medical me-2"></i> View Records
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
