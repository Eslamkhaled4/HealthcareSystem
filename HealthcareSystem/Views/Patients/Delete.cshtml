@model HealthcareSystem.Models.Patient

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            padding: 20px;
        }

        h1, h3, h4 {
            color: #4CAF50;
            text-align: center;
        }

        hr {
            border: 0;
            border-top: 1px solid #4CAF50;
            width: 50%;
            margin: 0 auto 20px;
        }

        .delete-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: 0 auto;
        }

            .delete-container dl {
                margin-bottom: 20px;
            }

            .delete-container dt {
                font-weight: bold;
                color: #4CAF50;
            }

            .delete-container dd {
                margin-bottom: 15px;
                font-size: 16px;
            }

            .delete-container dd, .delete-container dt {
                padding: 8px 15px;
            }

            .delete-container dd {
                background-color: #f9f9f9;
                border-radius: 4px;
            }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffeeba;
            color: #856404;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
            text-align: center;
        }

        .action-links {
            text-align: center;
            margin-top: 20px;
        }

            .action-links a {
                color: #4CAF50;
                font-weight: bold;
                text-decoration: none;
                margin: 0 10px;
            }

                .action-links a:hover {
                    color: #45a049;
                }

        .btn-danger {
            background-color: #d9534f;
            border-color: #d43f3a;
        }

            .btn-danger:hover {
                background-color: #c9302c;
                border-color: #ac2925;
            }

        .btn {
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <div class="delete-container">
        <h3>Are you sure you want to delete this?</h3>
        <hr />

        <div class="alert-warning">
            <strong>Warning:</strong> Deleting this patient will remove all related records.
        </div>

        <h4>Patient Details</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfBirth)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PatientId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</body>
</html>
